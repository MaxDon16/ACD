def sel_sort(ls):
    """
    Сортировка выбором (Selection Sort).
    Алгоритм ищет минимальный элемент и перемещает его в начало.
    """
    for i in range(len(ls) - 1):
        min_index = i
        for j in range(i + 1, len(ls)):
            if ls[j] < ls[min_index]:
                min_index = j
        ls[i], ls[min_index] = ls[min_index], ls[i]
    return ls
a= [5,3,1,8,4,2,0]

print(sel_sort(a))
